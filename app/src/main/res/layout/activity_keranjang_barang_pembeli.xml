<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Pembeli.ui.home.keranjang_barang_pembeli">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/btn_back"
            android:background="@drawable/ic_back_black"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/btn_back"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/alamatpen"
               android:text="Alamat Pembeli"
               android:textSize="18sp"
               android:textStyle="bold"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:layout_below="@id/alamatpen"
               android:id="@+id/alamatpengiriman"
               android:text="xxxx"
               android:textSize="16sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:layout_below="@id/alamatpengiriman"
               android:id="@+id/namatoko"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <LinearLayout
               android:id="@+id/bar"
               android:orientation="horizontal"
               android:layout_below="@id/namatoko"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/fotobarang"
                   android:layout_width="50dp"
                   android:layout_height="50dp"/>

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/namabarang"
                       android:text="xxx"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <Button
                           android:id="@+id/min"
                           android:text="-"
                           android:gravity="center"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>

                       <TextView
                           android:id="@+id/jumlahbarang"
                           android:layout_marginLeft="10dp"
                           android:text="1"
                           android:layout_width="20dp"
                           android:layout_height="wrap_content"/>

                       <Button
                           android:id="@+id/plus"
                           android:text="+"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>
                   </LinearLayout>

                   <TextView
                       android:id="@+id/harga"
                       android:text="10000"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:layout_below="@id/bar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:text="Opsi pengiriman"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <Spinner
                       android:id="@+id/pengiriman"
                       android:layout_width="150dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/ongkir"
                       android:text="Rp. 5000,-"
                       android:visibility="invisible"
                       android:gravity="end"
                       android:layout_marginEnd="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="10dp" />

               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:text="Pesan : "
                       android:layout_width="50dp"
                       android:layout_height="wrap_content"/>

                   <EditText
                       android:id="@+id/pesan"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:text="Metode Pembayaran : Tunai"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/metodebayar"
                       android:gravity="end"
                       android:text="Pilih metode bayar"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:drawableRight="@drawable/ic_arrow_right_black"/>

               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:text="Subtotal untuk produk "
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/subtotalproduk"
                       android:gravity="end"
                       android:text="Rp. 5000,-"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:text="Subtotal pengiriman"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/subtotalppengiriman"
                       android:gravity="end"
                       android:text="0"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:text="Total Bayar "
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:id="@+id/total"
                       android:gravity="end"
                       android:text="Rp. 5000,-"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/buatpesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat Pesanan"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgLoading"/>
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>