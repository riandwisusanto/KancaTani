<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Penjual.ui.Lapak.lapak_penjual">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:gravity="center">

        <LinearLayout
            android:layout_toRightOf="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_form_putih"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/text_search1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:background="@color/transparan"
                android:hint="Cari"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorPrimary" />
            <ImageView
                android:id="@+id/btn_search1"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_search_grey"
                android:layout_marginLeft="-40dp"
                android:padding="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/tambah_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tambah barang"
            />

        <Button
            android:id="@+id/riwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="riwayat"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/barangdijual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints" />

    </ScrollView>

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgLoading"/>
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>